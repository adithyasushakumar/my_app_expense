    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/trc"
        android:rotation="30"
        android:layout_marginLeft="120dp"
        android:id="@+id/imageView" />


</RelativeLayout>
