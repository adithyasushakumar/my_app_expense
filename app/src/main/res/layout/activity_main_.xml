<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ae.bluecast.my_app_expense.activities.Mainpage_Activity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wqs"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/lininframefir"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
    <FrameLayout
        android:id="@+id/calc"
        android:background="#077767"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        >
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="150dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/bood"-->
            <!--android:layout_gravity="center"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calandar_new"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calandar"
                android:id="@+id/txt"
                android:textColor="#151414"
                android:layout_gravity="center"
                android:textSize="15sp"
                />
        </LinearLayout>
    </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/lininframefir"
        android:id="@+id/lininframe1"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="400dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <FrameLayout
            android:id="@+id/cal1"
            android:background="#077767"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            >
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="150dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/bood"-->
                <!--android:layout_gravity="center"/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calc_new"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculator"
                    android:id="@+id/pic"
                    android:textColor="#151414"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/expn"
            android:layout_width="0dp"
            android:background="#077767"
            android:layout_marginLeft="5dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            >
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="150dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/bood"-->
                <!--android:layout_gravity="center"/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/expense_new"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Expense"
                    android:id="@+id/pop"
                    android:textColor="#151414"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/lininframe1"
        android:id="@+id/lininframe2"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="400dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <FrameLayout
            android:id="@+id/todo"
            android:background="#077767"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            >
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="150dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/bood"-->
                <!--android:layout_gravity="center"/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/diary_new"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Dairy"
                    android:id="@+id/pyp"
                    android:gravity="center"
                    android:textColor="#0d0c0c"
                    android:layout_marginLeft="15dp"
                    android:textSize="13sp"
                    />

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:background="#262E8B57"
            android:layout_width="10dp"
            android:layout_height="match_parent">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/dir"
            android:background="#077767"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            >
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="150dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/bood"-->
                <!--android:layout_gravity="center"/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/todo_new"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todo list"
                    android:textColor="#201d1d"
                    android:id="@+id/tdo"
                    android:layout_gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>



</RelativeLayout>
